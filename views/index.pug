extends layout

block content
  h1= title
  p Welcome to #{title}
  
  // Container with dark background and white text color
  .container.bg-dark.text-white
    h1 This is a heading
    p This is a paragraph of text.
  // Container with light background
  .container.bg-light
    h1 This is a heading
    p This is a paragraph of text.
  // Container with border
  .container.border
    h1 This is a heading
    p This is a paragraph of text.
  br
  .container-sm 100% wide until screen size less than 576px
  .container-md 100% wide until screen size less than 768px
  .container-lg 100% wide until screen size less than 992px
  .container-xl 100% wide until screen size less than 1200px
  br
  .container
    // Row with two equal columns
    .row
      .col-md-3 Column left
      .col-md-3 Column right
    // Row with two columns divided in 1:2 ratio
    .row
      .col-md-4 Column left
      .col-md-8 Column right
    // Row with two columns divided in 1:3 ratio
    .row
      .col-md-3 Column left
      .col-md-9 Column right
  br
  .container
    // Row with two equal columns
    .row
